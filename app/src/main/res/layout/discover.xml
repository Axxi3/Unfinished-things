<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardy"
   android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/design_default_color_on_primary"
    android:layout_marginBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/DiscoverMovie"
            android:layout_width="122dp"
            android:layout_height="112dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/_62f9519fb7818e1274cb4f287e5c324"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Moviename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mulish_light"
            android:gravity="start"
            android:lineBreakStyle="loose"
            android:text="Movie Name"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/DiscoverMovie"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/movierate"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="82dp"
            android:layout_height="13dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/DiscoverMovie"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"

            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/RElease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/movierate"
            app:layout_constraintStart_toStartOf="@+id/movierate"
            app:layout_constraintTop_toBottomOf="@+id/movierate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>